<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Reon" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="common.accent">@color/common.accent</item>
        <item name="common.bg">@color/common.bg</item>
        <item name="common.fg">@color/common.fg</item>
        <item name="common.ui">@color/common.ui</item>
        <item name="ui.panel.border">@color/ui.panel.border</item>
        <item name="ui.selection.bg">@color/ui.selection.bg</item>

        <item name="android:textColorTertiary">@color/common.fg</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>

        <!-- Primary brand color. -->
        <item name="colorAccent">@color/common.accent</item>
        <item name="colorPrimary">@color/common.accent</item>
        <item name="colorPrimaryVariant">@color/common.accent</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorOnPrimaryVariant">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>

    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="colorAccent">?common.accent</item>
        <item name="android:windowBackground">@drawable/background_view</item>
    </style>

    <style name="CustomPopupTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColor">@color/common.accent</item>
        <item name="android:colorBackground">@color/common.bg</item>
    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

</resources>